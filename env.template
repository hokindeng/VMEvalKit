# VMEvalKit Environment Configuration
# Copy this file to .env and configure your API keys

# ===========================================
# VIDEO GENERATION API KEYS
# ===========================================

# Luma Dream Machine
LUMA_API_KEY=your_luma_api_key_here

# OpenAI Sora
OPENAI_API_KEY=your_openai_api_key_here

# WaveSpeed AI (WAN models + Veo 3.1)
WAVESPEED_API_KEY=your_wavespeed_api_key_here

# Runway ML
RUNWAYML_API_SECRET=your_runway_secret_here

# ===========================================
# GOOGLE CLOUD (VEO MODELS)
# ===========================================

# Google Cloud Project ID
GOOGLE_PROJECT_ID=your_gcp_project_id

# Authentication (choose one):
# Option 1: Service Account Key File
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Option 2: Use gcloud auth (comment out GOOGLE_APPLICATION_CREDENTIALS)
# Run: gcloud auth application-default login

# ===========================================
# AWS S3 (FOR IMAGE UPLOADS)
# ===========================================

# AWS credentials for S3 uploads (used by some models)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-vmevalkit-bucket

# ===========================================
# OPTIONAL SETTINGS
# ===========================================

# Output directory (default: ./data/outputs)
VMEVALKIT_OUTPUT_DIR=./data/outputs

# Enable debug logging
DEBUG=false

# S3 upload settings
S3_UPLOAD_IMAGES=true
S3_EXPIRE_HOURS=24